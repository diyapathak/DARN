{
  "manifest_version": 2,
  "name": "DARN!",
  "description": "Block spoilers from your favorite book, movie, game, or TV show!",
  "version": "0.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
       "16": "images/meap16.png",
       "32": "images/meap32.png",
       "48": "images/meap48.png",
       "128": "images/meap128.png"
     }
  },
  "icons": {
     "16": "images/meap16.png",
     "32": "images/meap32.png",
     "48": "images/meap48.png",
     "128": "images/meap128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts":[
    {
      "matches":[
        "<all_urls>"
      ],
      "js":[
        "jquery-3.0.0.min.js",
        "popup.js"
      ]
    }
  ]
}
